<div class="container my-5">
  <h1 class="text-3xl font-bold mb-4"><%= @movie.title %></h1>

  <div class="movie-details">
    <p><strong>Director:</strong> <%= @movie.director %></p>
    <p><strong>Release Year:</strong> <%= @movie.release_year %></p>
    <p><strong>Description:</strong></p>
    <p><%= @movie.description %></p>
  </div>

  <div class="mt-8 flex gap-4">
    <%= link_to "Edit", edit_movie_path(@movie), class: "bg-yellow-500 text-white font-bold py-2 px-4 rounded" %>
    <%= button_to "Delete", movie_path(@movie), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-500 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Back to List", movies_path, class: "bg-gray-500 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
