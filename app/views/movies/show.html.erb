<div class="container my-5">
  <h1 class="text-3xl font-bold mb-4"><%= @movie.title %></h1>

  <div class="movie-details">
    <p><strong>Режиссёр:</strong> <%= @movie.director %></p>
    <p><strong>Год выпуска:</strong> <%= @movie.release_year %></p>
    <p><strong>Описание:</strong></p>
    <p><%= @movie.description %></p>
  </div>

  <div class="mt-8 flex gap-4">
    <%= link_to "Редактировать", edit_movie_path(@movie), class: "bg-yellow-500 text-white font-bold py-2 px-4 rounded" %>
    <%= button_to "Удалить", movie_path(@movie), method: :delete, data: { turbo_confirm: "Вы уверены?" }, class: "bg-red-500 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Назад к списку", movies_path, class: "bg-gray-500 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
