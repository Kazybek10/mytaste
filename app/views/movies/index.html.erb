<div class="alert alert-success" role="alert"><%= notice %></div>
<%# The notice container is styled in notices.css %>
<h1>All Movies</h1>

<nav class="top-actions">
  <%= link_to "Back to Home", root_path %>
  <% if user_signed_in? %>
    <%= link_to "Add New", new_movie_path %>
  <% end %>
</nav>

<div class="search-and-form">
<%= form_with url: movies_path, method: :get, local: true, class: "search-form" do %>
  <%= text_field_tag :query, params[:query], placeholder: "movies...", class: "form-control search-input" %>
  <%= submit_tag "Search", class: "btn btn-primary search-button" %>
<% end %>
</div>

<hr style="margin-top: 1rem; margin-bottom: 1rem;">

<div class="movie-grid">
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <%# Блок для обложки %>
      <div class="movie-cover-container">
      <% if movie.cover_image.attached? && movie.cover_image.image? %>
        <% begin %>
          <%= image_tag url_for(movie.cover_image.variant(resize_to_limit: [120, 180])), class: "movie-cover" %>
        <% rescue StandardError %>
          <div class="movie-cover-placeholder">
            <span class="placeholder-text">No Image</span>
          </div>
        <% end %>
      <% else %>
        <div class="movie-cover-placeholder">
          <span class="placeholder-text">No Image</span>
        </div>
      <% end %>
      </div>

      <%# Блок для информации, расположенный рядом с обложкой %>
      <div class="movie-info">
        <div>
          <%# Название фильма теперь является ссылкой %>
          <h3><%= link_to movie.title, movie_path(movie), class: "movie-title-link" %></h3>
          <p class="movie-description"><%= truncate(movie.description, length: 100) %></p>
          <p class="release-year">Released: <%= movie.release_year %></p>
          <p class="movie-genre">Genre: <%= movie.genre %></p>
          <p class="movie-director">Director: <%= movie.director %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="pagination-container">
  <% if defined?(@pagy) && @pagy.pages > 1 %>
    <%= pagination_nav(@pagy, :movies_path) %>
  <% end %>
</div>
