<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "background", "data-turbo-track": "reload" %>
<% end %>

<div class="background-video">
  <video autoplay loop muted playsinline id="bg-video">
    <source src="<%= asset_path('movies.mp4') %>" type="video/mp4">
  </video>
</div>

<div class="content">

<h1>Movies</h1>



<nav>
  <%= link_to "Back to Home", root_path %>
</nav>

<% if user_signed_in? %>
<ul>
  <li><%= link_to "New Movie", new_movie_path %></li>
</ul>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Director</th>
      <% if user_signed_in? %>
        <th colspan="3">Actions</th>
      <% else %>
        <th>Action</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.director %></td>
        <td><%= link_to "Show", movie_path(movie) %></td>
        <% if user_signed_in? && current_user == movie.user %>
          <td><%= link_to "Edit", edit_movie_path(movie) %></td>
          <td><%= link_to "Delete", movie_path(movie), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination-container">
  <%= pagination_nav(@pagy, :movies_path) %>
</div>
</div>