<p style="color: green"><%= notice %></p>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "background", "movies", "data-turbo-track": "reload" %>
<% end %>

<div class="background-video">
  <video autoplay loop muted playsinline id="bg-video">
    <source src="<%= asset_path('movies.mp4') %>" type="video/mp4">
  </video>
</div>

<div class="content">
<h1>Movies</h1>

<nav>
  <%= link_to "Back to Home", root_path %>
</nav>

<% if user_signed_in? %>
  <ul>
    <li><%= link_to "New Movie", new_movie_path %></li>
  </ul>
<% end %>

<%= form_with url: movies_path, method: :get, local: true do %>
  <%= text_field_tag :query, params[:query], placeholder: "Search movies...", class: "form-control" %>
  <%= submit_tag "Search", class: "search-btn" %>
<% end %>

<hr style="margin-top: 1rem; margin-bottom: 1rem;">

<div class="movie-grid">
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <% if movie.cover_image.attached? && movie.cover_image.image? %>
        <% begin %>
          <%= link_to movie_path(movie) do %>
            <%= image_tag url_for(movie.cover_image.variant(resize_to_limit: [200, 300])), class: "movie-cover" %>
          <% end %>
        <% rescue StandardError %>
          <div class="movie-cover-placeholder">
            <span class="placeholder-text">No Image</span>
          </div>
        <% end %>
      <% else %>
        <div class="movie-cover-placeholder">
          <span class="placeholder-text">No Image</span>
        </div>
      <% end %>
      <div class="movie-info">
        <h3><%= movie.title %></h3>
        <p><%= movie.description %></p>
        <%= link_to "Show this movie", movie_path(movie) %>
        <% if user_signed_in? && current_user == movie.user %>
          <%= link_to "Edit", edit_movie_path(movie) %>
          <%= link_to "Destroy", movie_path(movie), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="pagination-container">
  <% if defined?(@pagy) && @pagy.pages > 1 %>
    <%= pagination_nav(@pagy, :movies_path) %>
  <% end %>
</div>

</div>
