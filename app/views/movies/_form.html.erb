<% if movie.errors.any? %>
  <ul>
    <% movie.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
  </ul>
<% end %>

<%= form_with(model: movie, local: true) do |f| %>
  <div><%= f.label :title %><%= f.text_field :title %></div>
  <div><%= f.label :description %><%= f.text_area :description %></div>
  <div><%= f.label :release_year %><%= f.number_field :release_year %></div>
  <div><%= f.label :director %><%= f.text_field :director %></div>
  <div><%= f.submit %></div>
<% end %>
