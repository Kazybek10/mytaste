<p style="color: green"><%= notice %></p>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "background", "books_show", "data-turbo-track": "reload" %>
<% end %>

<div class="background-video">
  <video autoplay loop muted playsinline id="bg-video">
    <source src="<%= asset_path('books.mp4') %>" type="video/mp4">
  </video>
</div>

<div class="content">
  <div class="book-details">
    <div class="card-image">
      <% if @book.cover_image.attached? && @book.cover_image.image? %>
        <% begin %>
          <%= image_tag url_for(@book.cover_image.variant(resize_to_limit: [400, 600])), class: "book-cover" %>
        <% rescue StandardError %>
          <div class="book-cover-placeholder">
            <span class="placeholder-text">No Image</span>
          </div>
        <% end %>
      <% else %>
        <div class="book-cover-placeholder">
          <span class="placeholder-text">No Image</span>
        </div>
      <% end %>
    </div>
    
    <div class="card-body">
      <h1><%= @book.title %></h1>
      <p><strong>Author:</strong></p>
      <p><%= @book.author %></p>
      <p><strong>Genre:</strong></p>
      <p><%= @book.genre %></p>
      
      <div class="actions">
        <%= link_to "Back to books", books_path %>
        <% if user_signed_in? && current_user == @book.user %>
          <%= link_to "Edit", edit_book_path(@book) %>
          <%= link_to "Destroy", @book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
