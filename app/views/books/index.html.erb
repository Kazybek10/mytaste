<p style="color: green"><%= notice %></p>

<h1>Books</h1>

  <%= link_to "Back to Home", root_path, class: "back-link" %>
  <% if user_signed_in? %>
    <%= link_to "Add New", new_book_path, class: "new-item-link" %>
  <% end %>

<%= form_with url: books_path, method: :get, local: true do %>
  <%= text_field_tag :query, params[:query], placeholder: "books...", class: "form-control" %>
  <%= submit_tag "Search", class: "search-btn" %>
<% end %>

  <% @books.each do |book| %>
      <% if book.cover_image.attached? && book.cover_image.image? %>
        <% begin %>
          <%= link_to book_path(book) do %>
            <%= image_tag url_for(book.cover_image.variant(resize_to_limit: [200, 300])), class: "book-cover" %>
          <% end %>
        <% rescue StandardError %>
          <span class="placeholder-text">No Image</span>
        <% end %>
      <% else %>
          <span class="placeholder-text">No Image</span>
      <% end %>
        <h3><%= book.title %></h3>
        <p><%= book.author %></p>
        <%= link_to "Show this book", book_path(book) %>
        <% if user_signed_in? && current_user == book.user %>
          <%= link_to "Edit", edit_book_path(book) %>
          <%= link_to "Destroy", book_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <% end %>
  <% end %>

  <% if defined?(@pagy) && @pagy.pages > 1 %>
    <%= pagination_nav(@pagy, :books_path) %>
  <% end %>
