<div class="home-container">
  <video class="video-background" autoplay muted loop>
    <source src="<%= asset_path('background-video.mp4') %>" type="video/mp4">
  </video>
  
  <div class="overlay"></div>
  
  <div class="content">
    <h1 class="hero-title">Welcome to MyTaste</h1>
    <p class="hero-subtitle">Discover your favorite movies, books, and recipes</p>
    
    <div class="cta-buttons">
      <a href="<%= movies_path %>" class="cta-button"> Movies</a>
      <a href="<%= books_path %>" class="cta-button"> Books</a>
      <a href="<%= recipes_path %>" class="cta-button"> Recipes</a>
    </div>
  </div>
</div>