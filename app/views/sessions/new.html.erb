<h1>Sign in</h1>

<%= form_with url: sessions_path, method: :post, local: true do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email, params[:email], required: true, autofocus: true %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </div>
  <div>
    <%= submit_tag "Sign in" %>
  </div>
<% end %>

<p>
  New here? <%= link_to "Sign up", signup_path %>
<p>

